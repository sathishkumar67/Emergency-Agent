# LiveKit Emergency Dispatcher - Environment Template
# Copy this to .env.local and fill in your credentials

# ============================================
# LIVEKIT CONFIGURATION
# ============================================
# Get these from https://console.livekit.cloud

LIVEKIT_URL=https://your-project.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# ============================================
# GROQ API CONFIGURATION
# ============================================
# Get this from https://console.groq.com

GROQ_API_KEY=gsk_your_groq_key_here

# ============================================
# AGENT CONFIGURATION
# ============================================

AGENT_NAME=EmergencyDispatcher
AGENT_INITIAL_GREETING=Emergency Services. What is your emergency? Please describe what is happening.

# Optional: Pre-defined room name
# ROOM_NAME=emergency-room-1

# ============================================
# BACKEND API CONFIGURATION
# ============================================

FLASK_ENV=development
FLASK_DEBUG=1
API_PORT=5000
API_HOST=0.0.0.0

# ============================================
# LOGGING CONFIGURATION
# ============================================

LOG_LEVEL=INFO
LOG_FILE=emergency_dispatcher.log

# ============================================
# DATABASE CONFIGURATION (Optional)
# ============================================

# DATABASE_URL=sqlite:///emergency_calls.db
# DATABASE_URL=postgresql://user:password@localhost/emergency_db
